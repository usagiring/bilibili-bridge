{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "ES6",
    "outDir": "dist",
    "module": "CommonJS",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true
  }
}
