{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES6",
    "outDir": "dist",
    "module": "CommonJS",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./package.json"
  ]
}
